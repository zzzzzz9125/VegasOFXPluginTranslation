<?xml version="1.0" encoding="utf-8"?>
<OfxImageEffectResource>
  <OfxPlugin name="no.openfx.Text">
    <OfxResourceSet ofxHost="default">
      <OfxPropLabel>TextOFX</OfxPropLabel>
      <OfxImageEffectPluginPropGrouping>TextOFX</OfxImageEffectPluginPropGrouping>
      <OfxPropPluginDescription>OpenFX Text Generator

Copyright (c) Ole-Andr√© Rodlie, NettStudio AS. All rights reserved.

See https://text.openfx.no for more information.</OfxPropPluginDescription>
      <OfxImageEffectContext name="default">
        <OfxParamTypeString name="text">
          <OfxPropLabel>Text</OfxPropLabel>
          <OfxParamPropHint>The text that will be drawn.</OfxParamPropHint>
        </OfxParamTypeString>
        <OfxParamTypeString name="file">
          <OfxPropLabel>File</OfxPropLabel>
          <OfxParamPropHint>Import text or markup from file.</OfxParamPropHint>
        </OfxParamTypeString>
        <OfxParamTypeGroup name="propertiesGroup">
          <OfxPropLabel>Properties</OfxPropLabel>
          <OfxParamPropHint>Main properties for the text layout.</OfxParamPropHint>
        </OfxParamTypeGroup>
        <OfxParamTypeBoolean name="markup">
          <OfxPropLabel>Markup</OfxPropLabel>
          <OfxParamPropHint>Parse text as Pango Text Attribute Markup Language.

See https://docs.gtk.org/Pango/pango_markup.html for more information.</OfxParamPropHint>
        </OfxParamTypeBoolean>
        <OfxParamTypeChoice name="name">
          <OfxPropLabel>Select</OfxPropLabel>
          <OfxParamPropHint>Select the font family to be used.</OfxParamPropHint>
        </OfxParamTypeChoice>
        <OfxParamTypeString name="font">
          <OfxPropLabel>Font</OfxPropLabel>
          <OfxParamPropHint>Font family in use.</OfxParamPropHint>
        </OfxParamTypeString>
        <OfxParamTypeInteger name="size">
          <OfxPropLabel>Size</OfxPropLabel>
          <OfxParamPropHint>Font size in pixels.</OfxParamPropHint>
        </OfxParamTypeInteger>
        <OfxParamTypeDouble name="strokeSize">
          <OfxPropLabel>Stroke</OfxPropLabel>
          <OfxParamPropHint>Stroke size.</OfxParamPropHint>
        </OfxParamTypeDouble>
        <OfxParamTypeDouble name="letterSpace">
          <OfxPropLabel>Letter spacing</OfxPropLabel>
          <OfxParamPropHint>Spacing between letters.</OfxParamPropHint>
        </OfxParamTypeDouble>
        <OfxParamTypeDouble name="lineSpace">
          <OfxPropLabel>Line spacing</OfxPropLabel>
          <OfxParamPropHint>Spacing between lines.</OfxParamPropHint>
        </OfxParamTypeDouble>
        <OfxParamTypeChoice name="wrap">
          <OfxPropLabel>Word wrap</OfxPropLabel>
          <OfxParamPropHint>Wrap the lines to the desired width.</OfxParamPropHint>
          <OfxParamPropChoiceOption>None</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Word</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Char</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Word-Char</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeChoice name="halign">
          <OfxPropLabel>Horizontal align</OfxPropLabel>
          <OfxParamPropHint>Horizontal text align.</OfxParamPropHint>
          <OfxParamPropChoiceOption>Left</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Right</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Center</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Justify L</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Justify R</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeChoice name="valign">
          <OfxPropLabel>Vertical align</OfxPropLabel>
          <OfxParamPropHint>Vertical text align.</OfxParamPropHint>
          <OfxParamPropChoiceOption>Top</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Center</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Bottom</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeChoice name="style">
          <OfxPropLabel>Style</OfxPropLabel>
          <OfxParamPropHint>Font family style.</OfxParamPropHint>
          <OfxParamPropChoiceOption>Normal</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Italic</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeChoice name="weight">
          <OfxPropLabel>Weight</OfxPropLabel>
          <OfxParamPropHint>The weight field specifies how bold or light the font should be.</OfxParamPropHint>
          <OfxParamPropChoiceOption>Thin</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Ultra light</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Light</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Semi light</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Book</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Normal</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Medium</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Semi bold</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Bold</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Ultra bold</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Heavy</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Ultra heavy</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeChoice name="stretch">
          <OfxPropLabel>Stretch</OfxPropLabel>
          <OfxParamPropHint>Width of the font relative to other designs within a family.</OfxParamPropHint>
          <OfxParamPropChoiceOption>Ultra condensed</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Extra condensed</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Condensed</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Semi condensed</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Normal</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Semi expanded</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Expanded</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Extra expanded</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Ultra expanded</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeString name="showChars">
          <OfxPropLabel>Characters</OfxPropLabel>
          <OfxParamPropHint>Restrict which characters to show (1, 3, 5).</OfxParamPropHint>
        </OfxParamTypeString>
        <OfxParamTypeGroup name="colorGroup">
          <OfxPropLabel>Color</OfxPropLabel>
          <OfxParamPropHint>The fill color (RGBA) for the text, stroke and background.</OfxParamPropHint>
        </OfxParamTypeGroup>
        <OfxParamTypeRGBA name="color">
          <OfxPropLabel>Fill</OfxPropLabel>
          <OfxParamPropHint>The text fill color.</OfxParamPropHint>
        </OfxParamTypeRGBA>
        <OfxParamTypeRGBA name="strokeColor">
          <OfxPropLabel>Stroke</OfxPropLabel>
          <OfxParamPropHint>The stroke fill color.</OfxParamPropHint>
        </OfxParamTypeRGBA>
        <OfxParamTypeRGBA name="backgroundColor">
          <OfxPropLabel>Background</OfxPropLabel>
          <OfxParamPropHint>The background fill color.</OfxParamPropHint>
        </OfxParamTypeRGBA>
        <OfxParamTypeGroup name="transformGroup">
          <OfxPropLabel>Transform</OfxPropLabel>
          <OfxParamPropHint>Transform the text layout in various ways.</OfxParamPropHint>
        </OfxParamTypeGroup>
        <OfxParamTypeBoolean name="translate">
          <OfxPropLabel>Translate</OfxPropLabel>
          <OfxParamPropHint>Enable translate.</OfxParamPropHint>
        </OfxParamTypeBoolean>
        <OfxParamTypeDouble2D name="position">
          <OfxPropLabel>Position</OfxPropLabel>
          <OfxParamPropHint>Custom position of the text layout, if translate is enabled.</OfxParamPropHint>
        </OfxParamTypeDouble2D>
        <OfxParamTypeBoolean name="interactive">
          <OfxPropLabel>Interactive</OfxPropLabel>
          <OfxParamPropHint>When checked the image will be rendered whenever moving the overlay interact instead of when releasing the mouse button.</OfxParamPropHint>
        </OfxParamTypeBoolean>
        <OfxParamTypeDouble2D name="scale">
          <OfxPropLabel>Scale</OfxPropLabel>
          <OfxParamPropHint>Scale the text layout.</OfxParamPropHint>
        </OfxParamTypeDouble2D>
        <OfxParamTypeDouble name="skewX">
          <OfxPropLabel>Skew X</OfxPropLabel>
          <OfxParamPropHint>Skew the text layout (X).</OfxParamPropHint>
        </OfxParamTypeDouble>
        <OfxParamTypeDouble name="skewY">
          <OfxPropLabel>Skew Y</OfxPropLabel>
          <OfxParamPropHint>Skew the text layout (Y)*</OfxParamPropHint>
        </OfxParamTypeDouble>
        <OfxParamTypeDouble name="rotate">
          <OfxPropLabel>Rotate</OfxPropLabel>
          <OfxParamPropHint>Rotate the text layout.</OfxParamPropHint>
        </OfxParamTypeDouble>
        <OfxParamTypeInteger name="layoutWidth">
          <OfxPropLabel>Layout</OfxPropLabel>
          <OfxParamPropHint>Set width for the text layout when using translate (custom position). Default (0) is the width of the text or source/project format.</OfxParamPropHint>
        </OfxParamTypeInteger>
        <OfxParamTypeGroup name="rodGroup">
          <OfxPropLabel>RoD</OfxPropLabel>
          <OfxParamPropHint>The region of definition for an image effect is the rectangular section of the 2D image plane that it is capable of filling. The default is project format or source input.</OfxParamPropHint>
        </OfxParamTypeGroup>
        <OfxParamTypeInteger2D name="customRoD">
          <OfxPropLabel>Custom RoD</OfxPropLabel>
          <OfxParamPropHint>Set custom RoD size, default (0) is source/project format.</OfxParamPropHint>
        </OfxParamTypeInteger2D>
        <OfxParamTypeBoolean name="autoRoD">
          <OfxPropLabel>Auto RoD</OfxPropLabel>
          <OfxParamPropHint>Set RoD size based on text layout. Will override 'Custom RoD' and default source/project format.</OfxParamPropHint>
        </OfxParamTypeBoolean>
        <OfxParamTypeGroup name="pathGroup">
          <OfxPropLabel>Path</OfxPropLabel>
          <OfxParamPropHint>Text-to-path is an experimental feature and may change at any time. It should not be used in production, only for testing/feedback.</OfxParamPropHint>
        </OfxParamTypeGroup>
        <OfxParamTypePushButton name="pathAdd">
          <OfxPropLabel>Add</OfxPropLabel>
          <OfxParamPropHint>Add current position to path.</OfxParamPropHint>
        </OfxParamTypePushButton>
        <OfxParamTypePushButton name="pathClear">
          <OfxPropLabel>Clear</OfxPropLabel>
          <OfxParamPropHint>Clear path.</OfxParamPropHint>
        </OfxParamTypePushButton>
        <OfxParamTypeChoice name="pathType">
          <OfxPropLabel>Type</OfxPropLabel>
          <OfxParamPropHint>Path type.</OfxParamPropHint>
          <OfxParamPropChoiceOption>Move to</OfxParamPropChoiceOption>
          <OfxParamPropChoiceOption>Line to</OfxParamPropChoiceOption>
        </OfxParamTypeChoice>
        <OfxParamTypeBoolean name="pathPreview">
          <OfxPropLabel>Preview</OfxPropLabel>
          <OfxParamPropHint>Preview path (draw lines).</OfxParamPropHint>
        </OfxParamTypeBoolean>
        <OfxParamTypeString name="pathCords">
          <OfxPropLabel>Paths</OfxPropLabel>
          <OfxParamPropHint>Paths in use.</OfxParamPropHint>
        </OfxParamTypeString>
        <OfxParamTypeGroup name="otherGroup">
          <OfxPropLabel>Other</OfxPropLabel>
          <OfxParamPropHint>Other options.</OfxParamPropHint>
        </OfxParamTypeGroup>
        <OfxParamTypeBoolean name="glyphs">
          <OfxPropLabel>Glyphs</OfxPropLabel>
          <OfxParamPropHint>Render glyphs not path. Should not be used during animation.</OfxParamPropHint>
        </OfxParamTypeBoolean>
        <OfxParamTypePushButton name="info">
          <OfxPropLabel>Information</OfxPropLabel>
          <OfxParamPropHint>Information</OfxParamPropHint>
        </OfxParamTypePushButton>
      </OfxImageEffectContext>
    </OfxResourceSet>
  </OfxPlugin>
</OfxImageEffectResource>